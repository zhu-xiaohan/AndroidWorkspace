<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <gradient android:startColor="#bbbbbb" android:endColor="#bbbbbb"/>
            <corners android:radius="5dip"/>
            <stroke android:width="2dip" android:color="@color/tab_indicator"/>
        </shape>
        
    </item>
	<item >
	    <shape >
            <gradient android:startColor="#ededed" android:endColor="#ededed"/>
            <corners android:radius="5dip"/>
            <stroke android:width="1dip" android:color="@color/tab_indicator"/>
        </shape>
	</item>
</selector>
